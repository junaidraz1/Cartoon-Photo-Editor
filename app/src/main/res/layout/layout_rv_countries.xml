<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_btn_bg"
    android:backgroundTint="@color/newLightBlack"
    android:padding="@dimen/_6sdp"
    android:layout_marginStart="@dimen/_7sdp"
    android:layout_marginEnd="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp">

<!--        <RelativeLayout-->
<!--            android:id="@+id/rl_flags"-->
<!--            android:layout_width="@dimen/_35sdp"-->
<!--            android:layout_height="@dimen/_35sdp"-->
<!--            android:backgroundTint="@color/newLightBlack"-->
<!--            android:background="@drawable/filters_display_bg">-->

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_flag"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:riv_corner_radius="@dimen/_7sdp"
            android:layout_alignParentStart="true" />

<!--            <ImageView-->
<!--                android:id="@+id/iv_flag"-->
<!--                android:layout_width="@dimen/_35sdp"-->
<!--                android:layout_height="@dimen/_35sdp"-->
<!--                android:layout_alignParentStart="true" />-->

<!--        </RelativeLayout>-->

        <TextView
            android:id="@+id/tv_CountryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@+id/rb_selectLanguage"
            android:layout_toEndOf="@+id/iv_flag"
            android:textAlignment="viewStart"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

        <RadioButton
            android:id="@+id/rb_selectLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:buttonTint="@color/newpurple"
            android:clickable="false" />

    </RelativeLayout>

</RelativeLayout>