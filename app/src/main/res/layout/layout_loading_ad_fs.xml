<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/rl_loadingAd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/vdarkTransparent"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/pb_progressBar2"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:indeterminateTint="@color/lightPurple"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_loading_Ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pb_progressBar2"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/gilroy_bold"
            android:text="@string/loading_ad_label"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

    </RelativeLayout>

</RelativeLayout>